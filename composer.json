{
  "name": "mini4work/core",
  "description": "A minimalistic and flexible PHP framework with a lightweight core and modular structure.",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "MNaz",
      "email": "mail@mnaz.xyz"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "pestphp/pest": "^3.5"
  },
  "autoload": {
    "files": [
      "app/helpers.php"
    ],
    "psr-4": {
      "M4W\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}